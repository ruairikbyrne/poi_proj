<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    <table class="uk-table">
        <caption>
            Points of Interest
        </caption>
        <thead>
        <th>Name</th>
        <th>Description</th>
        <th>Longitude</th>
        <th>Latitude</th>
        </thead>
        <tbody class="uk-text-left">
        {{#each locationInfo}}
            <tr>
                <td>{{name}}</td>
                <td>{{description}}</td>
                <td>{{longitude}}</td>
                <td>{{latitude}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>